<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_font</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--        <item name="android:dialogTheme">@style/DialogTheme</item>
                <item name="android:datePickerStyle">@style/DatePickerSpinnerStyle</item>
                <item name="actionMenuTextColor">@color/selector_text_color</item>
                <item name="android:itemTextAppearance">@style/CustomMenuTextAppearance</item>
                <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
                // Material
                <item name="textAppearanceButton">@style/TextAppearance.MyApp.Button</item>
                <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
                <item name="android:forceDarkAllowed">false</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textViewColor</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_font</item>
        <!--        <item name="android:textFontWeight">700</item>-->
    </style>

    <style name="VivantTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="VivantDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:fontFamily">@font/roboto_font</item>
        <!--        <item name="android:layout_marginEnd">@dimen/_2sdp</item>-->
    </style>

    <style name="VivantEditTextStyle">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/roboto_font</item>
        <item name="backgroundTint">@color/selector_edit_text_color</item>
        <!--        <item name="colorControlHighlight">@color/vivant_green_blue_two</item>-->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/light_gray</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- border color -->
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintEnabled">false</item>
        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/colorPrimary</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/security_grey_light</item>
        <item name="android:textColor">@color/textViewColor</item>
    </style>

    <style name="MyEditTextStyle">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/roboto_font</item>
        <item name="android:paddingTop">@dimen/_8sdp</item>
        <item name="android:paddingBottom">@dimen/_8sdp</item>
        <item name="backgroundTint">@color/selector_edit_text_color</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/light_gray</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <!--        <item name="android:background">@drawable/btn_fill_brown</item>-->
        <item name="android:background">@drawable/btn_fill_selected</item>
        <!--        <item name="backgroundTint">@color/dark_gold</item>-->
        <!--        <item name="android:layout_marginStart">@dimen/_15sdp</item>
                <item name="android:layout_marginEnd">@dimen/_15sdp</item>-->
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_font</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/_1sdp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="CustomButtonLeft">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/btn_border_selected</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_font</item>
        <!--        <item name="backgroundTint">@color/vivant_pale_grey</item>-->
        <item name="android:textColor">@color/colorPrimary</item>
        <!--        <item name="android:layout_marginStart">@dimen/_5sdp</item>-->
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <!--        <item name="android:layout_marginTop">@dimen/_3sdp</item>
                <item name="android:layout_marginBottom">@dimen/_5sdp</item>-->
    </style>

    <style name="CustomButtonRight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/btn_fill_selected</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_font</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <!--        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
                <item name="android:layout_marginTop">@dimen/_3sdp</item>
                <item name="android:layout_marginBottom">@dimen/_5sdp</item>-->
    </style>

    <style name="CustomArrowNavigation">
        <item name="android:layout_width">@dimen/_32sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:gravity">center</item>
        <item name="srcCompat">@drawable/ic_forward</item>
        <!--        <item name="tint">@color/textViewColor</item>-->
        <item name="android:padding">@dimen/_4sdp</item>
        <item name="android:background">@drawable/img_icon_container</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TransparentProgressDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_font</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/vivantInactive</item>
        <item name="colorControlActivated">@color/secondary_pink</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="MyDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
    </style>

    <style name="MyDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/AlertDialogTitle</item>
    </style>

    <style name="AlertDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>