<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_dark_green"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_record_type"
            style="@style/VivantDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="0.4"
            android:text="@string/LAB_REPORT"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/textViewColor"
            android:layout_marginStart="@dimen/_3sdp"
            app:layout_constraintTop_toTopOf="@+id/txt_record_name"
            app:layout_constraintBottom_toBottomOf="@+id/txt_record_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_record_name"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_record_name"
            style="@style/VivantTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="0.6"
            android:text="Report_25_Apr_2022.pdf"
            android:textSize="@dimen/_10sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            app:layout_constraintStart_toEndOf="@+id/txt_record_type"
            app:layout_constraintEnd_toStartOf="@+id/img_download"
            app:layout_constraintTop_toTopOf="@+id/img_download"
            app:layout_constraintBottom_toBottomOf="@+id/img_download"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_download"
            style="@style/VivantDescription"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/img_download"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>