                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_appointment_date"
                    app:layout_constraintStart_toStartOf="@+id/lbl_patient_name"
                    app:layout_constraintEnd_toEndOf="@+id/lbl_patient_name"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lbl_consultation_mode"
