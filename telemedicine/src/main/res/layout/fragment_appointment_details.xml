                    app:layout_constraintTop_toTopOf="@+id/img_doctor"
                    app:layout_constraintEnd_toStartOf="@+id/img_appointment_mode"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_doctor_speciality"
