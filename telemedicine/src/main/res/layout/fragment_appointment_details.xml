                    app:layout_constraintStart_toStartOf="@+id/lbl_patient_name"
                    app:layout_constraintEnd_toEndOf="@+id/lbl_patient_name"
                    app:layout_constraintTop_toBottomOf="@+id/lbl_patient_name"/>

                <androidx.appcompat.widget.AppCompatTextView
